{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~apis": ["src/apis"],
      "~apis/*": ["src/apis/*"],

      "~assets": ["src/assets"],
      "~assets/*": ["src/assets/*"],

      "~components": ["src/components"],
      "~components/*": ["src/components/*"],

      "~configs": ["src/configs"],
      "~configs/*": ["src/configs/*"],

      "~constants": ["src/constants"],
      "~constants/*": ["src/constants/*"],

      "~layouts": ["src/layouts"],
      "~layouts/*": ["src/layouts/*"],

      "~hooks": ["src/hooks"],
      "~hooks/*": ["src/hooks/*"],

      "~navigators": ["src/navigators"],
      "~navigators/*": ["src/navigators/*"],

      "~screens": ["src/screens"],
      "~screens/*": ["src/screens/*"],

      "~states": ["src/states"],
      "~states/*": ["src/states/*"],

      "~themes": ["src/themes"],
      "~themes/*": ["src/themes/*"],

      "~types": ["src/types"],
      "~types/*": ["src/types/*"],

      "~utils": ["src/utils"],
      "~utils/*": ["src/utils/*"],

      "~redux": ["src/redux"],
      "~redux/*": ["src/redux/*"]
    }
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.d.js", "src/app.d.js"],
  "exclude": ["node_modules"]
}
